@page "/client"
@page "/client/{ClientId:int}"

@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.DropDowns
@using Syncfusion.Blazor.Calendars

<div class="content" style="min-width: 800px">
    @if (model == null) {
        <p>Loading...</p>
    } else {
        @if (ClientId.HasValue) {
            <h6>Editing '@model.Name'</h6>
        } else {
            <h6>New client</h6>
        }

        <hr />

        <EditForm Model="model" OnValidSubmit="Save">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="form-group">
                <SfTextBox Placeholder="Name" FloatLabelType="@FloatLabelType.Auto" @bind-Value="model.Name"></SfTextBox>
            </div>
            <div class="form-group">
                <SfDropDownList TItem="string" TValue="string" PopupHeight="230px" FloatLabelType="@FloatLabelType.Auto" Placeholder="Select a Country" @bind-Value="@model.Country" DataSource="@CountryOptions">
                </SfDropDownList>
            </div>
            <div class="form-group">
                <SfTextBox Placeholder="Email" FloatLabelType="@FloatLabelType.Auto" @bind-Value="model.Email" Type="@InputType.Email"></SfTextBox>
            </div>
            <div class="form-group">
                <SfDatePicker Placeholder="DateOfBirth" FloatLabelType="@FloatLabelType.Auto" @bind-Value="model.DateOfBirth"></SfDatePicker>
            </div>
            <div class="form-group">
                <SfButton CssClass="e-success" Type="submit" IconCss="oi oi-plus">Save</SfButton>
            </div>
        </EditForm>
    }
</div>